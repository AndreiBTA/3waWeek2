{% extends 'base.html.twig' %}

{% block title %}All products{% endblock %}

{% block body %}

    <div class="container mt-5">
        <p><a href="{{ path('app_products_add') }}">Create new product</a></p>
        <h2>All products</h2>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>CreatedAt</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_product_show', {id : product.id}) }}" class="btn btn-primary">See details</a>
                        <a href="{{ path('app_product_edit', {id : product.id}) }}" class="btn btn-warning">Edit</a>
                        <form action="{{ path('app_product_delete', { id: product.id }) }}" method="post">
                            <input type="hidden" name="token" value="{{ csrf_token('delete-item') }}">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete item</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}